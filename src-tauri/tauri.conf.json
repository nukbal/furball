{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devPath": "http://localhost:3000/",
    "distDir": "../dist"
  },
  "package": {
    "productName": "furball",
    "version": "0.1.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "copyFile": true,
        "createDir": true,
        "readDir": true,
        "readFile": true,
        "writeFile": true
      },
      "window": {
        "close": true,
        "setDecorations": true,
        "setIcon": true,
        "startDragging": true,
        "setSkipTaskbar": true,
        "setPosition": true
      },
      "path": {
        "all": true
      },
      "dialog": {
        "open": true
      },
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "bin/ffmpeg",
            "sidecar": true
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "category": "Utility",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": ["bin/ffmpeg"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.nukbal.furball",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "appimage": {
        "bundleMediaFramework": true
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "webviewInstallMode": {
          "type": "embedBootstrapper"
        }
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 325,
        "resizable": false,
        "title": "furball",
        "decorations": false,
        "fileDropEnabled": true,
        "width": 580
      }
    ]
  }
}